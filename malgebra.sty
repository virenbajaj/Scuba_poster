%%
%% Function classes (some are function spaces)
%%

%%\polynomials{R}{S} the ring of polynomials in S over R
\newcommand{\polynomials}[2]{\ensuremath{#1[#2]}}

%%\dpolynomials{R}{S} the differential ring of differential polynomials in S over R
\newcommand{\dpolynomials}[2]{\ensuremath{#1\{#2\}}}

%%\fextension{R}{S} the field extension of R extended by S
\newcommand{\fextension}[2]{\ensuremath{#1[#2]}}

%%\rationales{R}{S} the ring of rational expressions in S over R
\newcommand{\rationales}[2]{\ensuremath{#1(#2)}}

%% \graded[d]{R} the homogeneous component of degree d in ring R
\newcommand{\graded}[2][]{\ensuremath{#2_{#1}}}

%%
%% Functions
%%

%% the projection map to #1
\newcommand{\projection}[1][]{\pi_{#1}}

%%
%% Operators
%%

%% binary relations
\def\divides{\mathrel{\mid}}
\def\ndivides{\mathrel{\nmid}}

%%
%% Arrows
%%

\let\injectto\hookrightarrow

%%\deg{f} the degree of f
\providecommand{\degree}[1]{\text{deg}(#1)}

%% \ideal{M} the ideal generated by M
\newcommand{\ideal}[1]{(#1)}
%% \variety[F]{M} the variety of M, i.e. set of common zeros of
%% M\subseteq\polynomials{F}{X_1,\dots,X_n} in F^n
\newcommand{\variety}[2][]{V_{#1}(#2)}
%% \vanishing[k]{V} the vanishing ideal of V
\newcommand{\vanishing}[2][]{I_{#1}(#2)}
%% \radical{I} the radical ideal of I
\newcommand{\radicali}[1]{\sqrt[]{#1}}
%% \rradical{I} the real radical ideal of I
\newcommand{\rradicali}[1]{\sqrt[r]{#1}}

\let\subidealeq\trianglelefteq


%% linear algebra
%% \transpose{M} the transposed of matrix M
\newcommand{\transpose}[1]{#1^T}
%% conjungate of matrix M, i.e., transpose and imaginary sign flipped.
\newcommand{\conjugate}[1]{#1^*}

%% v \vgeq w componentwise vector comparison, i.e., v_i \geq w_i for all i
\newcommand{\vgeq}{\boldsymbol{\geq}}
\newcommand{\vleq}{\boldsymbol{\leq}}
\newcommand{\vgt}{\boldsymbol
{>}}
\newcommand{\vlt}{\boldsymbol{<}}

