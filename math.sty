%% function head signature, function definition body
\newcommand{\functiondef}[2]{#1;#2}

%% the set of all functions from #1 to #2
\newcommand{\maps}[2]{{#2}^{#1}}
%% restrict a function/relation to a subset
\providecommand{\restrict}[2]{#1\vert_{#2}}
%% \extends{L'}{L} means L' is an extension over L
\newcommand{\extends}[2]{\ensuremath{#1/#2}}


%% \modulo{G}{N} denotes G/N, i.e. G modulo N
\newcommand{\modulo}[2]{\ensuremath{{#1}/{#2}}}


%% modifies a relation to mean disjoint union or disjoint section or...
\newcommand{\disjoint}[1]{\dot{#1}}

%%@todo
\def\reducesto{\mapsto}

%% transitive closure operation
\newcommand{\closureTransitive}[1]{#1^\ast}

%% particular structures

%% \interval{[3,9]} is the closed interval from 3 to 9
%% \interval{(3,9]} is the left-open interval from 3 to 9, etc.
\newcommand{\interval}[1]{\ensuremath{#1}}

%% equation system
%% \begin{eqsystem}
%%  x(y) =& f(x,y)\\
%%  x(0) =& 1
%% \end{eqsystem}
\newenvironment{eqsystem}
{\left[\array{rl}}
{\endarray\right]}

%% a vector
%% \begin{avector}
%%  0\\
%%  3\\
%%  x^2
%% \end{avector}
\newenvironment{avector}
{\left(\array{c}}
{\endarray\right)}


